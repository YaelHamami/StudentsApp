<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddStudentActivity">

    <Button
        android:id="@+id/add_student_activity_cancel_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="20dp"
        android:text="@string/cancel"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/add_student_activity_save_button" />

    <ImageView
        android:id="@+id/add_student_activity_avatar_image_view"
        android:layout_width="320dp"
        android:layout_height="210dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/sheep" />

    <TextView
        android:id="@+id/add_student_activity_name_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginTop="36dp"
        android:layout_marginEnd="4dp"
        android:text="@string/name"
        app:layout_constraintEnd_toStartOf="@+id/add_student_activity_name_edit_text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/add_student_activity_avatar_image_view" />

    <TextView
        android:id="@+id/add_student_activity_id_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="4dp"
        android:text="@string/id"
        app:layout_constraintEnd_toStartOf="@+id/add_student_activity_id_edit_text"
        app:layout_constraintStart_toStartOf="@+id/add_student_activity_name_text_view"
        app:layout_constraintTop_toBottomOf="@+id/add_student_activity_name_text_view" />

    <EditText
        android:id="@+id/add_student_activity_name_edit_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="8dp"
        android:ems="10"
        android:inputType="text"
        app:layout_constraintBaseline_toBaselineOf="@+id/add_student_activity_name_text_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/add_student_activity_name_text_view" />

    <EditText
        android:id="@+id/add_student_activity_id_edit_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="8dp"
        android:ems="10"
        android:inputType="text"
        app:layout_constraintBaseline_toBaselineOf="@+id/add_student_activity_id_text_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/add_student_activity_id_text_view" />

    <Button
        android:id="@+id/add_student_activity_save_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="4dp"
        android:text="@string/save"
        app:layout_constraintBaseline_toBaselineOf="@+id/add_student_activity_cancel_button"
        app:layout_constraintEnd_toStartOf="@+id/add_student_activity_cancel_button"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/add_student_activity_saved_message_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        app:layout_constraintBottom_toTopOf="@+id/add_student_activity_save_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/add_student_activity_phone_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="4dp"
        android:text="@string/phone"
        app:layout_constraintEnd_toStartOf="@+id/add_student_activity_phone_edit_text"
        app:layout_constraintStart_toStartOf="@+id/add_student_activity_id_text_view"
        app:layout_constraintTop_toBottomOf="@+id/add_student_activity_id_text_view" />

    <TextView
        android:id="@+id/add_student_activity_address_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="4dp"
        android:text="@string/address"
        app:layout_constraintEnd_toStartOf="@+id/add_student_activity_address_edit_text"
        app:layout_constraintStart_toStartOf="@+id/add_student_activity_phone_text_view"
        app:layout_constraintTop_toBottomOf="@+id/add_student_activity_phone_text_view" />

    <EditText
        android:id="@+id/add_student_activity_address_edit_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="8dp"
        android:ems="10"
        android:inputType="text"
        app:layout_constraintBaseline_toBaselineOf="@+id/add_student_activity_address_text_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/add_student_activity_address_text_view" />

    <EditText
        android:id="@+id/add_student_activity_phone_edit_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="8dp"
        android:ems="10"
        android:inputType="phone"
        app:layout_constraintBaseline_toBaselineOf="@+id/add_student_activity_phone_text_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/add_student_activity_phone_text_view" />

    <CheckBox
        android:id="@+id/add_student_activity_checked_check_box"
        android:layout_width="91dp"
        android:layout_height="29dp"
        android:layout_marginTop="16dp"
        android:text="Checked"
        app:layout_constraintStart_toStartOf="@+id/add_student_activity_address_text_view"
        app:layout_constraintTop_toBottomOf="@+id/add_student_activity_address_text_view" />
</androidx.constraintlayout.widget.ConstraintLayout>